{
  "name": "design-system",
  "version": "1.0.0",
  "description": "Traboda Design System",
  "scripts": {
    "tailwind": "tailwindcss -i ./src/style.scss -o ./dist/style.css -c ./tailwind.config.cjs",
    "build-components": "rm -rf dist && rollup -c",
    "build-tailwind": "npm run tailwind -- --minify",
    "build": "npm run build-components && npm run build-tailwind",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint-fix": "eslint --fix src/ --ext .ts,.tsx",
    "watch-tailwind": "npm run tailwind -- --watch",
    "storybook": "concurrently \"npm run watch-tailwind\" \"start-storybook -p 6006\"",
    "build-storybook": "build-storybook",
    "type-check": "tsc --noEmit --emitDeclarationOnly false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/traboda/design-system.git"
  },
  "keywords": [
    "design-system",
    "traboda"
  ],
  "author": "Advaith A J",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/traboda/design-system/issues"
  },
  "homepage": "https://github.com/traboda/design-system#readme",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.3.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/builder-webpack5": "^6.5.15",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/react": "^6.5.15",
    "@storybook/testing-library": "^0.0.13",
    "@types/color": "^3.0.3",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "babel-loader": "^8.3.0",
    "clsx": "^1.2.1",
    "color": "^4.2.3",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.1",
    "hyperid": "^3.1.0",
    "loadash": "^1.0.0",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-waypoint": "^10.3.0",
    "rollup": "^3.10.0",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-polyfill-node": "^0.11.0",
    "rollup-plugin-scss": "^3.0.0",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "storybook-dark-mode": "^2.0.5",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
